@using Web365.App_Code
@model IEnumerable<Web365Domain.VideoTypeItem>
@{
    ViewBag.Title = ResourceLanguage.VideoLibrary;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="title-wrapper" style="background-image: url('/Content/uploads/tp_image05.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-holder">
                    <div class="title-holder-cell text-left">
                        <h1 class="page-title"><span>@ResourceLanguage.VideoLibrary</span></h1>
                        <ol class="breadcrumb">
                            <li>@HiconHtmlHelper.MakeLanguageHyperLink(ViewContext.RouteData, ResourceLanguage.Home, string.Empty)</li>
                            <li>@HiconHtmlHelper.MakeLanguageHyperLink(ViewContext.RouteData, ResourceLanguage.Library, "vi".Equals(Culture) ? "thu-vien" : "library")</li>
                            <li>@ResourceLanguage.VideoLibrary</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="content-wrapper" class="not-vc">
    <div class="container">
        <div class="row">
            <!--Main content-->
            @foreach (var type in Model)
            {
                <div class="st-heading style-1 text-left">
                    <h3 class="box-title">@type.Name</h3>
                    @*<div class="box-content">We are always working hard to build the real values.</div>*@
                </div>
                foreach (var item in type.Videos)
                {
                    <div class="vc_row wpb_row vc_inner vc_row-fluid vc_custom_1470320972347">
                        <div class="ab-color-01 wpb_column vc_column_container vc_col-sm-4">
                            <div class="vc_column-inner ">
                                <div class="wpb_wrapper">
                                    <div class="st-promobox">
                                        <a class="links popup-video" href="@item.Link">
                                            <div class="box-image">
                                                <span>
                                                    <img width="596" height="380" src="@Web365Utility.Web365Utility.GetPathPicture(item.Picture.FileName)" class="attachment-full size-full" alt="">
                                                </span>
                                            </div>
                                            <div class="box-content">
                                                <div class="box-content-inner">
                                                    <h4 class="box-title">@item.Name</h4>
                                                    @*<div class="box-subtitle">
                                                            @Html.Raw(item.Detail)
                                                        </div>*@
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            <!--End Main content-->
        </div>
    </div>
</div>
@section scripts
{
    <script>
        document.getElementById('libs').addEventListener('load', function () {
			setTimeout(function(){
            jQuery('.popup-video').magnificPopup({
                disableOn: 700,
                type: 'iframe',
                mainClass: 'mfp-fade',
                removalDelay: 160,
                preloader: false,

                fixedContentPos: false
            });
        }, 1000);
        });
    </script>
}