@using Web365.App_Code
@using Web365Utility
@using Web365Domain
@model Web365Models.ListArticleModel
@{
    Layout = null;
    var articleGroup = ViewBag.ArticleGroup as ArticleGroupItem;
    List<Web365Domain.ArticleTypeItem> ltsArticleProjectType = ViewBag.ltsArticleProjectType;
    List<Web365Domain.ArticleItem> ltsArticle = ViewBag.ltsArticle;
}
<div class="featured_work_wrapper pt20 pb20">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-xs-12 col-sm-12 col-lg-offset-3">
                <div class="tb_left_heading_wraper tb_center_dark_heading  tb_white_heding tb_bottompadder30">

                    <h3>
                        <span>
                            @ResourceLanguage.ProjectOnGoing
                        </span>
                    </h3>
                    <h2><span></span></h2>
                </div>
            </div>
        </div>

        @if (Model != null && Model.List.Any())
        {
            <div class="row">
                @foreach (var item in Model.List)
                {

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="item">
                        <div class="rst-img boximg">
                            <a href="@HiconHtmlHelper.GetHyperLinkWithLanguage(ViewContext.RouteData, item.ArticleType.NameAscii + "/" + item.TitleAscii)">
                                <img src="@Web365Utility.GetPathThumbPicture(item.Picture.FileName)" class="img-responsive center-block wp-post-image" alt="@item.Title" sizes="(max-width: 900px) 100vw, 900px">
                                <h4 class="bosiw" title="@item.Title">@HiconHtmlHelper.MakeLanguageHyperLink(ViewContext.RouteData, HiconHtmlHelper.TruncateContentInHtml(item.Title, 20, "..."), item.ArticleType.NameAscii + "/" + item.TitleAscii)</h4>
                            </a>
                        </div>
                    </div>
                </div>

                }
            </div>
        }
        <div class="col-md-12 bosfh"> <a href="@(Culture == "vi" ? "/du-an" : "/en/project")">@ResourceLanguage.ViewAllProject</a></div>


    </div>
</div> 