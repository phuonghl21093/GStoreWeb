@using Web365.App_Code
@using Web365Utility
@model Web365Domain.ArticleTypeItem
@{
    ViewBag.Title = Model.Name;
    ViewBag.Description = Model.SEODescription;
    ViewBag.Keywords = Model.SEOKeyword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="mcn-breadcrumb" class="m-gioithieu">
    <div class="container">
        <div class="bread-crumb">
            <span xmlns:v="http://rdf.data-vocabulary.org/#">
                <span typeof="v:Breadcrumb">
                    <a href="/" rel="v:url" property="v:title">@ResourceLanguage.Home <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                    <span rel="v:child" typeof="v:Breadcrumb">
                        @*<a href="@HiconHtmlHelper.GetHyperLinkWithLanguage(ViewContext.RouteData, @Model.NameAscii)" rel="v:url" property="v:title">@Model.Name <i class="fa fa-angle-right" aria-hidden="true"></i></a>*@
                        <span class="breadcrumb_last">@Model.Name</span>
                    </span>
                </span>
            </span>
        </div>



    </div>
</div>


<div class="best_Service_wrapper">
    <div class="container">

        @if (Model.Articles != null && Model.Articles.Any())
        {
            foreach (var item in Model.Articles.Take(6))
            {
                <div class="col-md-4 col-sm-6 col-xs-6 pb20">
                    <div class="item">

                        <div class="service_slider_cntnt">
                            <div class="service_wrapper_overlay">
                                <figure>
                                    <img src="@Web365Utility.GetPathThumbPicture(item.Picture.FileName)">
                                </figure>
                            </div>
                            <a href="@HiconHtmlHelper.GetHyperLinkWithLanguage(ViewContext.RouteData, item.ArticleType.NameAscii + "/" + item.TitleAscii)" title="@item.Title">
                                <div class="service_slider_btm_info">
                                    <h3 class="title-service" title="@item.Title" style=""> @Html.Raw(HiconHtmlHelper.TruncateContentInHtml(item.Title, 15, "..."))</h3>
                                </div>
                                <div class="service_slider_btm_hover">
                                    <h3 class="title_hover" title="@item.Title" style="">
                                        @Html.Raw(HiconHtmlHelper.TruncateContentInHtml(item.Title, 20, "..."))
                                    </h3>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>

            }
        }

    </div>
</div>
